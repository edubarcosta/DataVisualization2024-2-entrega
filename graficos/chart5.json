{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Relação entre Valor de Mercado e Overall dos Jogadores",
  "width": 750,
  "height": 250,
  "data": {
    "url": "players_22.csv",
    "format": {
      "type": "csv"
    }
  },
  "transform": [
    {
      "filter": "datum.value_eur > 0 && datum.overall > 0 && datum.league_name == 'English Premier League'"
    }
  ],
  "mark": "point",
  "encoding": {
    "x": {
      "field": "value_eur",
      "type": "quantitative",
      "title": "Valor de Mercado (EUR)",
      "axis": {
        "format": ".2s",
        "tickCount": 10,
        "grid": true
      },
      "scale": {
        "type": "log",
        "domain": [
          50000,
          150000000
        ]
      }
    },
    "y": {
      "field": "overall",
      "type": "quantitative",
      "title": "Overall do Jogador"
    },
    "size": {
      "field": "age",
      "type": "quantitative",
      "legend": {
        "title": "Idade"
      }
    },
    "color": {
      "field": "club_name",
      "type": "nominal",
      "legend": {
        "title": "Times"
      }
    },
    "tooltip": [
      {
        "field": "short_name",
        "type": "nominal",
        "title": "Nome do Jogador"
      },
      {
        "field": "value_eur",
        "type": "quantitative",
        "title": "Valor de Mercado",
        "format": ".2s"
      },
      {
        "field": "overall",
        "type": "quantitative",
        "title": "Overall"
      },
      {
        "field": "club_name",
        "type": "nominal",
        "title": "Clube"
      },
      {
        "field": "age",
        "type": "quantitative",
        "title": "Idade"
      }
    ]
  },
  "title": {
    "text": "Relação entre Valor de Mercado e Overall dos Jogadores (Premier League)",
    "fontSize": 16,
    "anchor": "start"
  }
}